<h2>Registration page</h2>

<div class="row">
    <form class="col s12" action="/register" method="post">
        {{#if error}}
            {{ error }}
        {{/if}}
        <div class="row">
            <div class="input-field col s6">
                <input id="first_name" placeholder="First Name" type="text" name="first_name" required class="validate">
            </div>
            <div class="input-field col s6">
                <input id="last_name" placeholder="Last Name" type="text" name="last_name" required class="validate">
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="password" placeholder="Password" type="password" name="password" required class="validate">
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="email" placeholder="Email" type="email" name="email" required class="validate">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>